<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2>Edit-UserData</h2>
                    <hr>
                    <form action="/user/update/<%= singleStudent.id %> " method="post" class="user_form" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input type="text" name="name" value="<%= singleStudent.name %> " class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input type="text" name="email" value="<%= singleStudent.email %>" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input type="text" name="cell" value="<%= singleStudent.cell %>" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label>
                            <br>
                            <img id="preview_img" src="/images/userPhoto/<%= singleStudent.photo %>" alt="">
                            <label for="user_photo_upload"><img src="https://t4.ftcdn.net/jpg/02/17/88/73/360_F_217887350_mDfLv2ootQNeffWXT57VQr8OX7IvZKvB.jpg" alt=""></label>
                            <br>
                            <input id="user_photo_upload" name="user_photo_upload" multiple type="file" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Upload Your CV</label>
                            <input type="file" name="cv" class="form-control">
                        </div>
                        <div class="my-3">
                            <input type="submit" class="btn btn-sm btn-primary w-100">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>